<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyApp.Views.AddItemWindow"
        Title="Ajouter un élément"
        Width="400"
        Height="300">
    <StackPanel>
        <TextBox Text="{Binding Grafcet}" Watermark="Grafcet"/>
        <TextBox Text="{Binding Type}" Watermark="Type"/>
        <TextBox Text="{Binding Libelle}" Watermark="Libellé"/>
        <Button Content="Ajouter" Command="{Binding AddItem}"/>
    </StackPanel>
</Window>
