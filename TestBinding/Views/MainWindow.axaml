<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TestBinding.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:local="using:TestBinding.Models"
        xmlns:views="clr-namespace:TestBinding.Views"
        xmlns:dataGridBehaviors="https://np.com/visuals"
        Width="800" Height="450"
        x:Class="TestBinding.Views.MainWindow"
        x:DataType="views:Item"
        Icon="/Assets/avalonia-logo.ico"
        Title="TestBinding">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <views:Item/>
    </Design.DataContext>
    <Window.Resources>
        <local:DemoItems x:Key="TheDemoItems"/>
    </Window.Resources>

    <DataGrid x:Name="TheDataGrid"
              Classes="WithColumnFilters"
              CanUserReorderColumns="True"
              CanUserResizeColumns="True"
              HorizontalAlignment="Left"
              Grid.Row="1"
              dataGridBehaviors:DataGridFilteringBehavior.DataGridFilterTextBoxClasses="DataGridFilterTextBox"
              dataGridBehaviors:DataGridFilteringBehavior.RowDataType="{x:Type views:Item}"
              dataGridBehaviors:DataGridCollectionViewBehavior.ItemsSource="{StaticResource TheDemoProducts}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Product Name"
                                dataGridBehaviors:DataGridColumnManipulationBehavior.CanRemoveColumn="False"
                                dataGridBehaviors:DataGridFilteringBehavior.FilterPropName="Grafcet"
                                Binding="{Binding Path=Grafcet}"/>
            <DataGridTextColumn Header="Product Description"
                                dataGridBehaviors:DataGridFilteringBehavior.FilterPropName="Type"
                                Binding="{Binding Path=Type}"/>
            <DataGridTextColumn Header="Manufacturer"
                                dataGridBehaviors:DataGridFilteringBehavior.FilterPropName="Libelle"
                                Binding="{Binding Path=Libelle}"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
